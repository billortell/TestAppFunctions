<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/ScrollView01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical"><TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Senden Sie eine SMS"></TextView>

<TableLayout android:id="@+id/TableLayout01" android:layout_height="wrap_content" android:layout_width="match_parent" android:stretchColumns="1" android:padding="8dip"><TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="An:"></TextView>

<EditText android:id="@+id/txtEmpf"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:inputType="phone"></EditText>
</TableRow>

<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nachricht:" android:layout_gravity="top"></TextView>
<EditText android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:id="@+id/txtMessage" android:lines="5" android:isScrollContainer="false" android:keepScreenOn="true" android:inputType="none"></EditText>

</TableRow>

<TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content">

<Button android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_column="1"
	android:id="@+id/btnsend"
    android:text="Absenden"></Button>
</TableRow>

<TableRow android:id="@+id/TableRow04" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Status:"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nicht verschickt." android:id="@+id/txtstate"></TextView>
</TableRow>
</TableLayout>

</LinearLayout>

</ScrollView>
